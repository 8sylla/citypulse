    {
        "id": "gen_traffic",
        "type": "function",
        "z": "traffic_flow",
        "name": "Generate Traffic Data",
        "func": "var districts = [\"Centre\", \"Nord\", \"Sud\", \"Est\", \"Ouest\"];\nvar id = \"cam_\" + Math.floor(Math.random() * 100);\nvar district = districts[Math.floor(Math.random() * districts.length)];\n\n// Simulation lat/lon approximative Paris\nvar lat = 48.85 + (Math.random() * 0.1 - 0.05);\nvar lon = 2.35 + (Math.random() * 0.1 - 0.05);\n\nmsg.payload = {\n    sensor_id: id,\n    district: district,\n    lat: lat,\n    lon: lon,\n    speed_kmh: Math.floor(Math.random() * 130),\n    vehicle_count: Math.floor(Math.random() * 50),\n    timestamp: new Date().toISOString()\n};\nreturn msg;",
        "outputs": 1,
        "noerr": 0,
        "initialize": "",
        "finalize": "",
        "libs": [],
        "x": 360,
        "y": 100,
        "wires": [["kafka_traffic", "debug_traffic"]]
    },
    {
        "id": "kafka_traffic",
        "type": "kafka",
        "z": "traffic_flow",
        "name": "Traffic Producer",
        "broker": "citypulse-kafka:9092",
        "topic": "traffic-raw",
        "requireAcks": 1,
        "ackTimeoutMs": 100,
        "x": 600,
        "y": 100,
        "wires": []
    },
